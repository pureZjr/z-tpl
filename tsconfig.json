{
    "compilerOptions": {
        "target": "es5",
        "module": "ESNext",
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "@assets/*": ["src/assets/*"],
            "@components/*": ["src/containers/components/*"],
            "@constant/*": ["src/constant/*"],
            "@shared/*": ["src/containers/shared/*"],
            "@views/*": ["src/containers/views/*"],
            "@router/*": ["src/router/*"],
            "@services/*": ["src/services/*"],
            "@store/*": ["src/store/*"],
            "@utils/*": ["src/utils/*"],
            "@typings/*": ["typings/*"],
            "@config/*": ["config/*"]
        },
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "removeComments": false,
        "alwaysStrict": true,
        "allowJs": true,
        "noUnusedLocals": true,
        "importHelpers": true,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "lib": ["es7", "dom"],
        "skipLibCheck": true,
        "typeRoots": ["typings", "node", "node_modules/@types"]
    },
    "exclude": ["node_modules"],
    "include": ["src/**/*", "typings/*"]
}
